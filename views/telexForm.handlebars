<h4>Subir telex</h4>
<form id=postTelex method=post action="accessors/telex/upload" enctype="multipart/form-data">
	<div class=container>
		<div class="row">
			<div class="col-md-auto">
				<label for=file>File</label>
			</div>
			<div class="col-md-auto">
				<input name=file type=file required=true>
			</div>
		</div>
		<div class="row">
			<div class="col-md-auto">
				<label for=timestart>Fecha inicial</label>
			</div>	
			<div class="col-md-auto">
				<input name=timestart type=date>
			</div>
		</div>
		<div class=row>
			<div class="col-md-auto">
				<button type=submit>Confirmar</button>
			</div>
		</div>
	</div>
</form>
<a href="/cargarPlanillas">&lt;&lt;volver</a>
<script>
	window.onload = function() {
		if(!$("form#post div.row input[name=timestart]").val()) {
			var timestart = new Date()
			timestart.setTime(timestart.getTime() - 14*24*3600*1000)
			$("form#post input[name=timestart]").val(timestart.toISOString().substring(0,10))
		}
	}
</script>
